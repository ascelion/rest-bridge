<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} %-5level %-40logger{40} [%thread]
				%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="ascelion.rest.bridge.TRAFFIC" level="ALL" />
	<logger name="ascelion.rest.bridge.tests.SERVER" level="ALL" />
	<logger name="ascelion.rest.bridge.micro.CONFIG" level="ALL" />

	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
