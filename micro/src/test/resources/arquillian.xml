<?xml version="1.0" encoding="UTF-8"?>

<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<defaultProtocol type="Servlet 3.0" />

	<engine>
		<property name="deploymentExportExploded">true</property>
		<property name="deploymentExportPath">build/deployments</property>
	</engine>

	<container qualifier="glassfish" default="true">
		<configuration>
			<property name="adminPort">${server.adminPort}</property>
			<property name="glassFishHome">${server.home}</property>
		</configuration>
	</container>

	<container qualifier="wildfly">
		<configuration>
			<property name="jbossHome">${server.home}</property>
			<property name="modulePath">${server.home}/modules</property>
		</configuration>
	</container>
</arquillian>
